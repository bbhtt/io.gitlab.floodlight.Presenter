{
    "app-id": "io.gitlab.floodlight.Presenter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "floodlight-presenter",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=host:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/debug",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "presenter",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/floodlight/presenter.git",
                    "tag": "0.10.1",
                    "commit": "fee21a13812461a18c4a6db8839ce2a8a278429e"
                }
            ]
        }
    ]
}
