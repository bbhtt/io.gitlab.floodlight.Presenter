{
    "app-id": "io.gitlab.floodlight.Presenter",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.34",
    "sdk": "org.gnome.Sdk",
    "command": "floodlight-presenter",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--share=network",
        "--filesystem=host:ro"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/lib/debug",
        "/share/gtk-doc",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "gst-libav",
            "config-opts": [
                "--disable-gtk-doc"
            ],
            "sources": [{
                "type": "archive",
                "url": "https://gstreamer.freedesktop.org/src/gst-libav/gst-libav-1.16.2.tar.xz",
                "sha256": "c724f612700c15a933c7356fbeabb0bb9571fb5538f8b1b54d4d2d94188deef2"
            }]
        },
        {
            "name": "libgee",
            "config-opts" : [
                "--enable-introspection=no"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libgee.git",
                    "tag": "0.20.2",
                    "commit": "5e66324654b7d70d7c28793491a4edfe6d8a0d85"
                }
            ]
        },
        {
            "name": "presenter",
            "buildsystem": "meson",
            "builddir": true,
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.com/floodlight/presenter.git",
                    "tag": "beta-10",
                    "commit": "c148ef272650777d2678f979c9ac32c2941221f7"
                }
            ]
        }
    ]
}
